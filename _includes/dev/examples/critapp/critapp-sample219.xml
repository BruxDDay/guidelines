<score xmlns="http://www.tei-c.org/ns/Examples" xmlns:rng="http://relaxng.org/ns/structure/1.0" xmlns:sch="http://purl.oclc.org/dsdl/schematron" xmlns:xi="http://www.w3.org/2001/XInclude">
   <app>
      <rdg source="#critApp.source1">
         <scoreDef>
            <staffGrp>
               <staffDef n="1"></staffDef>
               <staffDef n="2"></staffDef>
            </staffGrp>
         </scoreDef>
      </rdg>
      <rdg source="#critApp.source2">
         <scoreDef>
            <staffGrp>
               <!-- The order of <staffDef> elements defines score order, not its @n attribute! -->
               <staffDef n="2"></staffDef>
               <staffDef n="1"></staffDef>
            </staffGrp>
         </scoreDef>
      </rdg>
   </app>
   <section>
      <measure>
         <staff n="1"></staff>
         <staff n="2"></staff>
      </measure>
   </section>
</score>